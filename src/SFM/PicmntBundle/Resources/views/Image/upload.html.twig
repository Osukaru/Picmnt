{% block content %}

{{ 'Please insert the URL of the image' | trans }}


<form action="{{ path('img_upload') }}" method="post" {{ form_enctype(form) }}>

  <div>
    {{  form_label(form.url , 'Url' | trans ) }}
    {{ form_widget(form.url) }}
  </div>

  {# necesary for the correct use of the form, without this the form is not valid #}
  {{ form_rest(form) }}

  <input type="submit" />

</form>
  
