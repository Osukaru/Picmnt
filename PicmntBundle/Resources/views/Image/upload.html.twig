{#{% extends "SFMPicmntBundle::base.html.twig" %}#}
<html>

  <head>

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>{% block title %}Picmnt{% endblock %}</title>
    <link rel="stylesheet" type="text/css" media="all" href="{{ asset('bundles/picmntbundle/stylesheets/reset.css')}}">
    <link rel="stylesheet" type="text/css" media="all" href="{{ asset('bundles/picmntbundle/stylesheets/960.css')}}">
    <link rel="stylesheet" type="text/css" media="all" href="{{ asset('bundles/picmntbundle/stylesheets/text.css')}}">
    <link rel="stylesheet" type="text/css" media="all" href="{{ asset('bundles/picmntbundle/stylesheets/layout.css')}}">
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('bundles/picmntbundle/fancybox/jquery.fancybox-1.3.4.css')}}">

    <link rel="stylesheet" type="text/css" media="all" href="{{ asset('bundles/picmntbundle/jqueryUI/css/custom-theme/jquery-ui-1.8.13.custom.css') }}">
   
   <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.5.0/jquery.min.js"></script>  
   
   <script type="text/javascript" src="{{ asset('bundles/picmntbundle/fancybox/jquery.fancybox-1.3.4.pack.js')}}"></script>
   <script type="text/javascript" src="{{ asset('bundles/picmntbundle/js/picmnt.js') }}"> </script>
  
   
   
  
  </head>
  <body>

{% block body %}

{{ 'Please insert the URL of the image' | trans }}

<form id="upload_form" action="{{ path('img_upload') }}" method="post" {{ form_enctype(form) }} >

  {{ form_errors(form) }}

  <div>
    {{  form_label(form.dataFile , 'Url' | trans ) }}
    {{ form_widget(form.dataFile) }}
  </div>

  {# necesary for the correct use of the form, without this the form is not valid #}
  {{ form_rest(form) }}

  <input type="submit" id="upload" /> {# onsubmit="parent.$.fancybox.close(); return false" id="upload" /> #}

</form>
  
{% endblock %}


</body>
</html>
